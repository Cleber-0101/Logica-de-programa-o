		String nome1, nome2;
		double salario1 , salario2;
		int idade;
		char sexo;
		
		//logica basica 
		System.out.println("Digite o nome da primeira pessoa: ");
		nome1 = entradaDeDados.nextLine();
		System.out.println("Digite o salario da segunda pessoa: ");
		salario1 = entradaDeDados.nextDouble();
		
		System.out.println("Digite o nome da primeira pessoa: ");
		entradaDeDados.nextLine();
		nome2 = entradaDeDados.nextLine();
		System.out.println("Digite o salario da segunda pessoa: ");
		salario2 = entradaDeDados.nextDouble();
		
		
	}
 
