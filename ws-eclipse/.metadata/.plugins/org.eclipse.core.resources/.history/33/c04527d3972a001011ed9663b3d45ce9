import java.util.Scanner;

public class ExerciciosCompostos {

	public static void main(String[] args) {
		
		Scanner entradaDeDados = new Scanner(System.in);
		
		String nome1, nome2;
		double salario1 , salario2;
		int idade;
		char sexo;
		
		//logica basica trabalhando com entrada de dados
		System.out.println("Digite o nome da primeira pessoa: ");
		nome1 = entradaDeDados.nextLine();
		System.out.println("Digite o salario da segunda pessoa: ");
		salario1 = entradaDeDados.nextDouble();
		
		System.out.println("Digite o nome da segunda pessoa: ");
		entradaDeDados.nextLine();
		nome2 = entradaDeDados.nextLine();
		System.out.println("Digite o salario da segunda pessoa: ");
		salario2 = entradaDeDados.nextDouble();
		
		System.out.println("Digite uma idade: ");
		idade = entradaDeDados.nextInt();
		System.out.println("Digite um sexo (F/M): ");
		sexo = entradaDeDados.next().charAt(0);
		
		System.out.println("Nome 1: " + nome1);
		System.out.println("Salario 1: " + String.format("%.2f", salario1));
		System.out.println("Nome 2: " + nome2);
		System.out.println("Salario 2: " + String.format("%.2f", salario2));
		System.out.println("Idade: " + idade);
		System.out.println("Sexo: " + sexo);


	}
 
}
