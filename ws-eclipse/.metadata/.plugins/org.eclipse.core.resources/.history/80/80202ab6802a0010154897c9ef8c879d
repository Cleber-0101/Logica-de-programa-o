import java.util.Locale;
import java.util.Scanner;

public class EntradaDeDadosEmJava {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		//Iniciando entrada de dados em Java
		
		Scanner entrada = new Scanner(System.in);
		
		//iniciando o algoritmo
		System.out.print("Qual seu nome? ");
		String nome = entrada.nextLine();
		
		System.out.print("Qual sua idade ?");
		int idade = entrada.nextInt();
		
		System.out.print("Qual sua altura ");
		double altura = entrada.nextDouble();
		
		System.out.print("voce se considera do sexo masculino ou feminino ?");
		String sexo = entrada.next();
		
		System.out.print("Voce é maior de idade ?");
		boolean MaiorDeIdade = entrada.nextBoolean();
		
		
		System.out.print("O meu nome é: " + nome + " minha idade é de: " + idade + 
				" minha altura é de " + altura +  " eu me considero do sexo: " + sexo + " eu sou  maior de idade: " + MaiorDeIdade);
		
		entrada.close();
		
		
		
		
		
	}

}
